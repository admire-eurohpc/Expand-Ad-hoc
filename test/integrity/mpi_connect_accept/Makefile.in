

#
# Definitions
#

 MAKE          = make -s
 CC            = @CC@
 LIB_PATH      = -L/usr/lib
 INCLUDE_PATH  = -I./
 SOURCE_PATH   = .
 CFLAGS        = -Wall -O2
 LIBLINK       = -lpthread
 OBJS_CLNT     = $(SOURCE_PATH)/client.o
 OBJS_SRV      = $(SOURCE_PATH)/server.o

 
#
# Rules
#

all:    init    client server
refast: clean   client server
fast:           client server

client: $(OBJS_CLNT)
	@echo "   Building:"
	@echo "     client ..."
	@$(CC)  $(CFLAGS) -o client  $(OBJS_CLNT) $(LIBLINK)

server: $(OBJS_SRV)
	@echo "   Building:"
	@echo "     server ..."
	@$(CC)  $(CFLAGS) -o server  $(OBJS_SRV)  $(LIBLINK)


init:
	@echo "" 
	@echo "    mpi_connect/accept" 
	@echo "   --------------------"
	@echo "" 
	@echo "   Options:"
	@echo "     "$(CFLAGS)
	@echo "   Directory:"
	@echo "     "$(INCLUDE_PATH)
	@echo "   Compiling:"

%.o: %.c
	@echo "     $< ..." 
	@$(CC)  $(CFLAGS) $(INCLUDE_PATH) -c $< -o $@ 


clean: 
	@echo "   Removing trash..."
	@rm -fr   ./*.o ./client ./server  tag.txt
	@echo "   Done!"


